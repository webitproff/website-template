<div class="uk-margin-top uk-margin-bottom">
  <div class="uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-4@l uk-grid-small" uk-grid="masonry: true">
    {% for item in productData.slice( start if start else 0, end if end else 0) %}
      <div>
        <a class="uk-display-block uk-inline-clip uk-transition-toggle uk-border-rounded uk-box-shadow-medium" tabindex="0" uk-tooltip="{{ item.price }}" href="{{ 'shop/' + item.path }}.html">
          <img class="uk-transition-scale-up uk-transition-opaque" src="{{ item.imageSrc }}" alt="{{ item.imageCopy }}" />
        </a>
      </div>
    {% endfor %}
  </div>
</div>