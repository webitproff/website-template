---
layout: layout.njk
---

<div class="bg-gray-900 max-w-screen-md rounded-xl mx-auto my-8 shadow-2xl">
  <p class="text-xl">
    <a class="transition duration-500 ease-in-out hover:bg-gray-50 hover:text-gray-900 px-6 py-4 rounded-tl-xl inline-block font-bold" href="index.html">
      <i class="fas fa-reply"></i>
    </a>
  </p>

  <div class="prose max-w-none px-4 sm:px-8 mb-8 text-center">
    <h1>
      {{ title }}
    </h1>
    <p>
      <img src="{{ imageSrc }}" alt="{{ imageCopy }}" />
    </p>
    <p>
      {{ excerpt }}
      <a href="{{ imageLink }}" target="_blank">
        {{ imageCopy }}
      </a>
    </p>
  </div>

  <!-- target="_blank" not available -->
  <div class="prose max-w-none px-4 sm:px-8 mb-8">
    {{ content | safe }}
  </div>

  <p class="text-xl text-right">
    <a class="transition duration-500 ease-in-out hover:bg-gray-50 hover:text-gray-900 px-6 py-4 rounded-br-xl inline-block font-bold" href="index.html">
      <i class="fas fa-share"></i>
    </a>
  </p>
</div>