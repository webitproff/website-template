<div class="uk-container uk-margin-large">
  <div uk-slider>
    <ul class="uk-slider-items uk-grid-match uk-child-width-1-3@m uk-child-width-1-2@s" uk-grid>
      {% for learn in collections.learns.slice(0,6) %}
      <li>
        <div class="uk-card {{ 'uk-card-secondary' if loop.index === 1 else 'uk-card-default' }}">
          <div class="uk-card-media-top uk-height-medium uk-background-cover" style="background-image: url({{learn.data.image}})"></div>
          <div class="uk-card-body">
            <h3 class="uk-card-title">
              {{ learn.data.title }}
            </h3>
            <p>
              {{ learn.data.description }}
              <a href="{{ learn.data.sourceImage }}" target="_blank">
                {{ learn.data.copyImage }}
              </a>
            </p>
            <a class="uk-button uk-button-secondary" href="{{ learn.url }}">
              Learn
            </a>
          </div>
        </div>
      </li>
      {% endfor %}
    </ul>
    <ul class="uk-slider-nav uk-dotnav uk-flex-center uk-margin"></ul>
  </div>
</div>
<div class="uk-flex-middle" uk-grid>
  <div class="uk-width-2-3@m">
    <div class="uk-flex uk-flex-middle uk-card uk-card-default uk-margin-right uk-margin-remove-right@m" id="about">
      <div class="uk-width-1-3 uk-card-media-left uk-height-large uk-background-cover" style="background-image: url(https://images.pexels.com/photos/6137913/pexels-photo-6137913.jpeg?auto=compress&cs=tinysrgb&w=1280)"></div>
      <div class="uk-width-2-3 uk-card-body">
        <h2 class="uk-heading-small">
          About
        </h2>
        <p class="uk-h4 uk-margin-top">
          Lorem, ipsum dolor sit amet consectetur adipisicing elit. Id doloremque accusantium at cupiditate quaerat temporibus?
        </p>
        <p>
          <a href="https://www.pexels.com/photo/crop-woman-collecting-lilac-flowers-in-summer-garden-6137913/" target="_blank">
            Photo by Follow my Instagram from Pexels
          </a>
        </p>
      </div>
    </div>
  </div>
  <div class="uk-width-1-3@m">
    {% for blog in collections.blogs.slice(0,2) %}
    <div class="uk-card {{ 'uk-card-secondary' if loop.index === 1 else 'uk-card-default' }} uk-margin-medium uk-margin-large-left uk-margin-remove-left@m uk-margin-large-right">
      <div class="uk-card-header">
        <h3 class="uk-card-title uk-margin-remove-bottom">
          {{ blog.data.title }}
        </h3>
        <p class="uk-text-meta uk-margin-remove-top">
          <time>
            {{ blog.data.date.toLocaleDateString('en', { day: 'numeric', month: 'long', year: 'numeric' }) }}
          </time>
        </p>
      </div>
      <div class="uk-card-body">
        {{ blog.data.description }}
      </div>
      <div class="uk-card-footer uk-text-right uk-text-left@m">
        <a class="uk-button uk-button-text" href="{{ blog.url }}">
          Read
        </a>
      </div>
    </div>
    {% endfor %}
  </div>
</div>