---
back: true
pagination:
  data: learns
  size: 1
  alias: item
permalink: "learn/{{ item.path | slug }}/index.html"
eleventyComputed:
  title: "{{ item.title }} - Learn"
---

<div class="uk-section uk-section-muted">
  <div class="uk-container uk-container-xsmall">
    <h1>
      {{ item.title }}
    </h1>
    <p class="uk-text-large">
      {{ item.description }}
    </p>
    <div class="uk-cover-container uk-height-medium">
      <img src="{{ item.image.src }}" alt="{{ item.image.copy }}" uk-cover="" />
    </div>
    <p>
      <a href="{{ item.image.link }}" target="_blank">
        {{ item.image.copy }}
      </a>
    </p>
    <h4>
      How to craft
    </h4>
    <ul class="uk-list uk-list-decimal">
      {% for i in item.steps %}
        <li class="uk-margin-large">
          <span class="uk-display-block uk-margin">
            {{ i.text }}
          </span>
          <img src="{{ i.imageSrc }}" class="uk-height-max-medium uk-align-center" />
        </li>
      {% endfor %}
    </ul>
  </div>
</div>